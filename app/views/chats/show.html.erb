<h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット</h1>

<div class="container">
  <div class="row">
	  <div class="col-xs-4">
      <div class="content">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <p style="text-align: right;"><%= chat.content %></p>
          <% else %>
            <p style="text-align: left;"><%= chat.content %></p>
          <% end %>
        <% end %>
      </div>

<%= form_with model: @chat do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :room_id %>
  <%= f.submit %>
<% end %>